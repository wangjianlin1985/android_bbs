<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.chengxusheji.domain">

	<class name="Student" table="Student">

          <!-- 主键学号 -->
          <id name="studentNumber" type="string" length="20">
            <generator class="assigned"/>
          </id>

          <!-- 简单字符串属性: 登录密码 -->
          <property
            name="password"
            column="password"
            type="string"
            length="20"
          />

          <!-- 多对一属性: 所在专业 -->
          <many-to-one name="specialObj"
            column="specialObj"
            class="SpecialInfo"
            lazy="false"
            outer-join="true"
            cascade="save-update"
          />

          <!-- 简单字符串属性: 姓名 -->
          <property
            name="studentName"
            column="studentName"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 性别 -->
          <property
            name="sex"
            column="sex"
            type="string"
            length="4"
          />

          <!-- 简单日期型属性: 出生日期 -->
          <property
            name="birthday"
            column="birthday"
            	type="timestamp"
            	length="10"
          />

          <!-- 简单图片属性: 学生照片 -->
          <property
            name="studentPhoto"
            column="studentPhoto"
            type="string"
            length="50"
          />

          <!-- 简单字符串属性: 联系电话 -->
          <property
            name="telephone"
            column="telephone"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 家庭地址 -->
          <property
            name="address"
            column="address"
            type="string"
            length="80"
          />

          <!-- 简单字符串属性: 附加信息 -->
          <property
            name="memo"
            column="memo"
            type="string"
            length="500"
          />


		 
		
	</class>
	
</hibernate-mapping>
 
